{ 
  "manifest_version": 2,
  "name": "Hot-Map",
  "description": "Provides a multi folder hot-keyable bookmarker",
  "version": "1.12",
  "author": "Michael Walker, www.github.com/mdubbpro",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage"
  ],
  "browser_action": {
      "default_title": "Hot-Map",
      "default_icon": "icons/hotmap.png",
      "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "commands": {
    "mapkey1": {
      "suggested_key": {
        "windows": "Alt+1",
        "default": "Alt+1"
      },
      "description": "Registered folder 0",
      "global": true
    },
    "mapkey2": {
      "suggested_key": {
        "windows": "Alt+2",
        "default": "Alt+2"
      },
      "description": "Registered folder 1",
      "global": true
    },    
    "mapkey3": {
      "suggested_key": {
        "windows": "Alt+3",
        "default": "Alt+3"
      },
      "description": "Registered folder 2",
      "global": true
    },
    "mapkey4": {
      "suggested_key": {
        "windows": "Alt+4",
        "default": "Alt+4"
      },
      "description": "Registered folder 3",
      "global": true
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ajax.googleapis.com; object-src 'self'"
}